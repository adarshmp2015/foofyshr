<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_area :name , class: "form-control" , placeholder: "Name Of the Event"%>
  </div>

  <div class="form-group">
    <%= f.text_area :description , class: "form-control" , placeholder: "Event Description" %>
  </div>

  <div class="">
    <div class="form-group col-sm-6">
      <%= f.label :event_date %>
      <br>
      <%= f.date_select(:event_date, {}, {:class => "form-control col-sm-3 frm-date"}) %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :status_id %>
      <%= f.select :status_id, options_for_select(Status.all.collect { |c| [c.title, c.id] }, event.status_id), { prompt: 'Select Status' },  class: "form-control", :required => true %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

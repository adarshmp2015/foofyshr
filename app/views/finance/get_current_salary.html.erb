<%= form_tag('/finance/pay_salary', method: :get , remote: true) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= label_tag "Employee Name" %>
      <%= text_field_tag :user_id ,'' , class: "form-control" , id: "emp_name" , disabled: true %>
    </div>
    <div class="form-group">
      <%= label_tag "Salary For Month" %>
      <%= text_field_tag :month %>
    </div>
    <div class="form-group">
      <%= label_tag "Salary Amount" %>
      <%= text_field_tag :amount %>
    </div>

    <%= submit_tag "Send Invite", class: 'btn btn-primary' %>
  </div>
<% end %>

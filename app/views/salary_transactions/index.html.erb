<div class="container">
  <div class=" jumbotron">
    <div>Salary Transactions</div>
    <br>
    <table class="table  table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>User</th>
          <th>Month</th>
          <th>Amount</th>
          <th>Transaction Date </th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @salary_transactions.each do |salary_transaction| %>
          <tr>
            <td><%= salary_transaction.user.name %></td>
            <td><%= salary_transaction.month %></td>
            <td><%= salary_transaction.amount %></td>
            <td><%= salary_transaction.created_at %></td>
            <!-- <td><%#= link_to 'Show', salary_transaction %></td> -->
            <td><%= link_to 'Edit', edit_salary_transaction_path(salary_transaction) %></td>
            <!-- <td><%#= link_to 'Destroy', salary_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Salary Transaction', new_salary_transaction_path %>
  </div>
</div>

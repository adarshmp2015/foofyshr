<p id="notice"><%= notice %></p>

<h1>Salary Transactions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Month</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salary_transactions.each do |salary_transaction| %>
      <tr>
        <td><%= salary_transaction.user %></td>
        <td><%= salary_transaction.month %></td>
        <td><%= salary_transaction.amount %></td>
        <td><%= link_to 'Show', salary_transaction %></td>
        <td><%= link_to 'Edit', edit_salary_transaction_path(salary_transaction) %></td>
        <td><%= link_to 'Destroy', salary_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


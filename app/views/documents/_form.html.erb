<%= form_for(document) do |f| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Employee Name' %>
    <%= f.select :user_id, options_for_select(User.all.collect { |c| [c.name, c.id] }, document.user_id), { prompt: 'Select Employee Name' }, class: 'form-control' , :required => true  %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title , :required => true  %>
  </div>

  <div class="form-group">
    <%= f.label 'Document' %>
    <%= f.attachment_field :doc_image , :required => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div class="container">
  <div class=" jumbotron">
    <div class="">
      Designations
        <%= link_to 'New Designation', new_designation_path , class:'btn btn-default right'%>
    </div>
    <br>
    <table class="table  table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @designations.each do |designation| %>
          <tr>
            <td><%= designation.title %></td>
            <td><%= designation.description %></td>
            <td><%= link_to 'Show', designation %></td>
            <td><%= link_to 'Edit', edit_designation_path(designation) %></td>
            <td><%= link_to 'Destroy', designation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

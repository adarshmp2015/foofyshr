<div class="container">
  <div class=" jumbotron">
    <div class="">
      Project List
        <%= link_to 'New Project', new_project_path , class: 'right btn btn-default'%>
    </div>
    <br>
    <table class="table  table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Total budget</th>
          <th>From</th>
          <th>To</th>
          <th>Instalments</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.total_budget %></td>
            <td><%= project.from %></td>
            <td><%= project.to %></td>
            <td><%= project.no_instalments %></td>
            <td><%= link_to 'Show', project %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>

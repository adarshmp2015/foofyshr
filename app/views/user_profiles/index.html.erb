<div class="container">
  <div class=" jumbotron">
    <div>
      Employees Profiles
        <%= link_to 'New Employee Profile', new_user_profile_path , class:'btn btn-default right'%>
    </div>
    <br>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Employees</th>
          <th>DOJ</th>
          <th>DOB</th>
          <th>Role</th>
          <th>Designation</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user_profiles.each do |user_profile| %>
          <tr>
            <td><%= user_profile.user.name %></td>
            <td><%= user_profile.doj %></td>
            <td><%= user_profile.dob %></td>
            <td><%= user_profile.role.title %></td>
            <td><%= user_profile.designation.title %></td>
            <td><%= user_profile.status.title %></td>
            <td><%= link_to 'Show', user_profile %></td>
            <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
            <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

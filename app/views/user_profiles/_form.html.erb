<%= form_for(user_profile) do |f| %>
  <% if user_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_profile.errors.count, "error") %> prohibited this user_profile from being saved:</h2>

      <ul>
      <% user_profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %>
    <%#= f.text_field :user_id %>
    <%= f.select :user_id, options_for_select(User.all.collect { |c| [c.name, c.id] }, user_profile.user_id), { prompt: 'Select User' }, class: '' , :required => true %>
  </div>

  <div class="field">
    <%= f.label :doj %>
    <%= f.date_select :doj %>
  </div>

  <div class="field">
    <%= f.label :dob %>
    <%= f.date_select :dob %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :per_address %>
    <%= f.text_area :per_address %>
  </div>

  <div class="field">
    <%= f.label :role_id %>
    <%#= f.text_field :role_id %>
    <%= f.select :role_id, options_for_select(Role.all.collect { |c| [c.title, c.id] }, user_profile.role_id), { prompt: 'Select Role' }, class: '' , :required => true %>
  </div>

  <div class="field">
    <%= f.label :designation_id %>
    <%#= f.text_field :designation_id %>
    <%= f.select :designation_id, options_for_select(Designation.all.collect { |c| [c.title, c.id] }, user_profile.designation_id), { prompt: 'Select Designation' }, class: '' , :required => true %>
  </div>

  <div class="field">
    <%= f.label :status_id %>
    <%#= f.text_field :status_id %>
      <%= f.select :status_id, options_for_select(Status.all.collect { |c| [c.title, c.id] }, user_profile.status_id), { prompt: 'Select Status' }, class: '' , :required => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
